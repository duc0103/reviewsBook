Options +FollowSymlinks
RewriteEngine on
ErrorDocument 404 http://localhost/BookReview/404.html
ErrorDocument 403 http://localhost/BookReview/403.html
Options All -Indexes


<Files includes/dbconfig.php>
order allow,deny
deny from all
</Files>

# protect against DOS attacks by limiting file upload size
LimitRequestBody 10240000

<ifModule mod_gzip.c>
mod_gzip_on Yes
mod_gzip_dechunk Yes
mod_gzip_item_include file .(html?|txt|css|js|php|pl)$
mod_gzip_item_include handler ^cgi-script$
mod_gzip_item_include mime ^text/.*
mod_gzip_item_include mime ^application/x-javascript.*
mod_gzip_item_exclude mime ^image/.*
mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*
</ifModule>
<files secretfile.jpg>
order allow,deny
deny from all
</files>


#Bảo vệ htaccess
<Files .htaccess>

Order Allow,Deny

Deny from all

</Files>
# preserve bandwidth for PHP enabled servers
<ifmodule mod_php4.c>
php_value zlib.output_compression 16386
</ifmodule>


# Rewrite url
RewriteEngine on

# Url home
RewriteRule ^home$ index.php
RewriteRule ^home/$ index.php

# Url bài viết
RewriteRule ^([a-zA-Z0-9_-]+)-([0-9]+).html$ post.php?post_id=$2
RewriteRule ^([a-zA-Z0-9_-]+)-([0-9]+).html/$ post.php?post_id=$2

# Url admin
#RewriteRule ^admin$ admin/index.php
#RewriteRule ^admin/$ admin/index.php

# Url chuyên mục
RewriteRule ^category/([a-zA-Z0-9_-]+)$ category.php?category_slug=$1
RewriteRule ^category/([a-zA-Z0-9_-]+)/$ category.php?category_slug=$1

# Url phân trang
RewriteRule ^home/([0-9]+)$ index.php?page=$1
RewriteRule ^home/([0-9]+)/$ index.php?page=$1

# Url phân trang chuyên mục
RewriteRule ^category/([a-zA-Z0-9_-]+)/([0-9]+)$ category.php?category_slug=$1&page=$2
RewriteRule ^category/([a-zA-Z0-9_-]+)/([0-9]+)/$ category.php?category_slug=$1&page=$2

# cache images and flash content for one month
<FilesMatch ".(flv|gif|jpg|jpeg|png|ico|swf)$">
Header set Cache-Control "max-age=2592000"
</FilesMatch>

# cache text, css, and javascript files for one week
<FilesMatch ".(js|css|pdf|txt)$">
Header set Cache-Control "max-age=604800"
</FilesMatch>

# cache html and htm files for one day
<FilesMatch ".(html|htm)$">
Header set Cache-Control "max-age=43200"

</FilesMatch>
# implement minimal caching during site development
<FilesMatch "\.(flv|gif|jpg|jpeg|png|ico|js|css|pdf|swf|html|h tm|txt)$">
Header set Cache-Control "max-age=5"
</FilesMatch>

# explicitly disable caching for scripts and other dynamic files
<FilesMatch "\.(pl|php|cgi|spl|scgi|fcgi)$">
Header unset Cache-Control
</FilesMatch>

<FilesMatch "\.(htaccess|htpasswd|ini|phps|fla|psd|log|sh) $">
Order Allow,Deny
Deny from all
</FilesMatch>

# prevent folder listing
IndexIgnore *

